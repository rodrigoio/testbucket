<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\PropertyValue" table="property_value">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="integerValue" type="integer" nullable="true"/>
        <field name="decimalValue" type="decimal" nullable="true"/>
        <field name="textValue" type="text" nullable="true"/>
        <field name="booleanValue" type="boolean" nullable="true"/>
        <field name="datetimeValue" type="datetime" nullable="true"/>

        <field name="valid" type="boolean"/>

        <many-to-one field="property" target-entity="TestBucket\Entity\Property">
            <join-column name="property_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
