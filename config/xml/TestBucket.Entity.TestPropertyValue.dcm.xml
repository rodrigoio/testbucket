<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\TestPropertyValue" table="test_property_value">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="hash" type="string"/>
        <field name="value" type="string"/>
        <field name="isValid" type="integer"/>

        <many-to-one field="property" target-entity="TestBucket\Entity\TestProperty">
            <join-column name="test_property_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
