<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\TestProperty" table="test_property">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>
        <field name="name" type="string"/>
        <field name="type" type="string"/>

        <many-to-one field="group" target-entity="TestBucket\Entity\TestGroup">
            <join-column name="test_group_id" referenced-column-name="id"/>
        </many-to-one>

        <one-to-many field="values" target-entity="TestBucket\Entity\TestPropertyValue" mapped-by="property">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
