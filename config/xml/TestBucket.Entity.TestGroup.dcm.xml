<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\TestGroup" table="test_group" repository-class="TestBucket\Repository\TestGroupRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string"/>
        <unique-constraints>
            <unique-constraint columns="name" name="name_idx"/>
        </unique-constraints>

        <one-to-many field="properties" target-entity="TestBucket\Entity\TestProperty" mapped-by="group">
            <cascade>
                <cascade-persist/>
            </cascade>
        </one-to-many>
    </entity>
</doctrine-mapping>
