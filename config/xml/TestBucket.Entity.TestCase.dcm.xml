<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\TestCase" table="test_case" repository-class="TestBucket\Repository\TestCaseRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <one-to-one field="grouping" target-entity="TestBucket\Entity\Grouping">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="grouping_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-one field="property" target-entity="TestBucket\Entity\Property">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="property_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-one field="propertyValue" target-entity="TestBucket\Entity\PropertyValue">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="property_value_id" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>
