<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="TestBucket\Entity\TestCase" table="test_case" repository-class="TestBucket\Repository\TestCaseRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <one-to-one field="testGroup" target-entity="TestBucket\Entity\TestGroup">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="test_group_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-one field="testProperty" target-entity="TestBucket\Entity\TestProperty">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="test_property_id" referenced-column-name="id"/>
        </one-to-one>

        <one-to-one field="testPropertyValue" target-entity="TestBucket\Entity\TestPropertyValue">
            <cascade>
                <cascade-remove/>
            </cascade>
            <join-column name="test_property_value_id" referenced-column-name="id"/>
        </one-to-one>
    </entity>
</doctrine-mapping>