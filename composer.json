{
	"name": "testbucket/testbucket",
	"description": "A tool to generate test cases",
	"type": "library",
	"keywords": [
		"php",
		"tests",
		"generator",
		"test cases"
	],
    "require": {
		"php" : "^7.2",
        "symfony/dotenv": "v4.4.7",
		"symfony/yaml": "v4.4.7",
		"symfony/console": "v4.4.7",
		"symfony/phpunit-bridge": "v4.4.7",
		"squizlabs/php_codesniffer": "3.5.4",
      	"ext-json": "*",
      	"ext-sqlite3": "*",
		"doctrine/orm": "2.9.1",
		"doctrine/cache": "1.11"
    },
	"require-dev": {
    	"phpunit/phpunit": "7.5.14"
  	},
	"autoload": {
        "psr-4": {
            "TestBucket\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TestBucket\\Tests\\": "tests/"
        }
    },
	"bin": [
		"testbucket"
	],
	"scripts": {
		"test_setup": "vendor/bin/doctrine --force orm:schema-tool:drop && vendor/bin/doctrine orm:schema-tool:create --quiet",
		"test": "vendor/bin/phpunit"
	}
}
